<h1><%= t ".dashboard" %></h1>

<div class="row-fluid">
  <div class="span6 pull-left">
  	<div class="well">
	  	<h2><%= t ".last_replies" %></h2>
				<table class="table table-striped table-condensed">
					<thead>
						<tr>
							<th><%= Reply.model_name.human(count: 2) %></th>
							<th><%= Event.model_name.human %></th>
						</tr>
					</thead>
					<tbody>
  					<% @last_replies.each do |reply| %>
							<tr>
								<td>
									<%= reply.field_replies.map{|fr| fr.content}.join(", ") %>
								</td>
								<td>
									<%= link_to reply.event.title, replies_event_path(reply.event) if reply.event %>
								</td>
							</tr>
						<% end -%>
					</tbody>
				</table>
  	</div>
  </div>
  <div class="span6 pull-left">
  	<div class="well">
	  	<h2><%= t ".last_events" %></h2>
	  	<table class="table table-striped table-condensed">
				<thead>
					<tr>
						<th><%= Event.model_name.human %></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @last_events.each do |event| %>
						<tr>
							<td>
								<%= link_to event.title, replies_event_path(event)%>
							</td>
							<td>
								<%= link_to	t(:edit), edit_event_path(event), class: "btn btn-mini" %>
								<%= link_to	Reply.model_name.human(count: 2), replies_event_path(event), class: "btn btn-mini" %>
							</td>
						</tr>
					<% end -%>
				</tbody>
			</table>
  	</div>
  </div>
</div>
