<%= simple_form_for @event, 
  :html => { :class => 'form-horizontal' }, 
  :validate => true do |f| %>
    <%= f.input :title %>
    <%= f.input :start_date, :as => :string %>
    <%= f.input :end_date, :as => :string %>
    <%= f.input :max_att %>
    <%= f.input :description, :as => :text %>
    <%= f.button :submit %>
    <input type="hidden" name="event_id" value="<%= @event.id %>">
<% end %>

