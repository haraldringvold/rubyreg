<%= simple_form_for @event,
  :html => { :class => 'form-horizontal' },
  :validate => true do |f| %>
    <%= f.input :title %>
    <%= f.input :start_date, :as => :string %>
    <%= f.input :end_date, :as => :string %>
    <%= f.input :max_att %>
    <%= f.input :description, :as => :text,  :input_html => { :class => 'wysiwyg',:rows => 10 } %>
    <%= f.input :confirmation_message, :as => :text,  :input_html => { :class => 'wysiwyg',:rows => 10 } %>
    <input type="hidden" id="event_id" name="event_id" value="<%= @event.id %>">
    <div class="form-actions">
	    <%= f.submit nil, :value => t(:save), :class => 'btn btn-primary' %>
	    <%= link_to t(:cancel), events_path(), :class => 'btn' %>
  </div>
<% end %>

