<h2><%= @event.title %></h2>
  <%#= Array @form %>
<%= simple_form_for @form, :html => { :class => 'form-horizontal' } do |f|%>
  <%= hidden_field_tag "event_id", @event.id %>
  <% @form.attributes.each do |key, value| %>
      <%= f.input key, label: @slug_label.fetch(key.to_s) %>
    <% #end -%>
  <% end -%>
    <div class="form-actions">
      <%= f.submit nil, :value => "Lagre", :class => 'btn btn-primary' %>
      <%= link_to 'Avbryt', events_path(), :class => 'btn' %>
  </div>
<% end -%>