<h1>Påmeldinger</h1>


<table class="table table-striped" >
  <tr>
    <th>Tittel
    <th>Beskrivelse
    <th>Plasser
    <th>Påmeldingsvindu
    <th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %>
    <td><%= event.description %>
    <td><%= event.max_att %>  
    <td><%= event.start_date.strftime("%d. %b %Y") %> - <%= event.end_date.strftime("%d. %b %Y") %>
    <td>
      <%= link_to 'Rediger', edit_event_path(event), :class => 'btn btn-mini'%>
      <%= link_to 'Slett', event, confirm: 'Er du sikker?', method: :delete,  :remote => true, :class => 'btn btn-mini btn-danger' %>
  </tr>
<% end %>
</table>
<%= link_to 'Ny påmelding', new_event_path, :class => 'btn btn-primary' %>
